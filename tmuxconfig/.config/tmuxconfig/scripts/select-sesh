#!/bin/bash

# tmux capture-pane -ep -t "${session_id}

set -- 'tmux capture-pane -pe -S' \
  '$(start=$(( $(tmux display-message -t {1} -p "#{pane_height}")' \
  '- 10 ));' \
  '(( start>0 )) && echo $start || echo 0) -t {2} || echo -e "\n" && toilet -f mono12 "Session inactive"'

preview_cmd=$*

SELECT=$(
  sesh list --icons | fzf-tmux -p 80%,70% \
    --no-sort --ansi --border-label ' SELECT|START SESS|TMUX ' --prompt '‚ö° ' \
    --header ' ^a all ^t tmux ^g configs ^z zoxide ^x tmux kill ^f find' \
    --bind 'tab:down,btab:up' \
    --bind 'alt-a:change-prompt(‚ö° )+reload(sesh list --icons)' \
    --bind 'ctrl-f:change-prompt(üîé )+reload(fd -H -d 2 -t d -E .Trash . ~)' \
    --bind 'ctrl-g:change-prompt(‚öôÔ∏è )+reload(sesh list -c --icons)' \
    --bind 'ctrl-t:change-prompt(ü™ü )+reload(sesh list -t --icons)' \
    --bind 'ctrl-x:execute(tmux kill-session -t {2..})+change-prompt(‚ö°  )+reload(sesh list -d --icons)' \
    --bind 'ctrl-z:change-prompt(üìÅ )+reload(sesh list -z --icons)' \
    --preview-window 'right:nohidden:55%:border-none' \
    --preview "$preview_cmd"
  # --preview "sesh preview")
)

[[ -z $SELECT ]] && exit

SESSION_NAME=$(echo "${SELECT}" | cut -d " " -f 2)

tmux switch-client -t "$SESSION_NAME" || sesh connect "$SESSION_NAME"
# tmux display-message "Switched to $SESSION_NAME"
