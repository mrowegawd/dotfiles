ACTIVE_BG="#2b2b2b"
ACTIVE_FG="#000000"

STATUSLINE_BG_MESSAGE="#dcdcaa"
STATUSLINE_FG="#404040"

SESSION_BG="#d4d4d4"
SESSION_FG="#1f1f1f"

TMUX_BG="#1f1f1f"
TMUX_FG="#4a4a4a"

BORDER_FG_ACTIVE="#569cd6"
BORDER_FG_NC="#2a2a2a"

RED="#f44747"
BLUE="#569cd6"
WHITE="#d4d4d4"
GREEN="#608b4e"

setw -g window-style bg=$TMUX_BG
setw -g window-active-style bg=$TMUX_BG

setw -g pane-active-border-style bg=$TMUX_BG,fg=$BORDER_FG_ACTIVE
setw -g pane-border-style bg=$TMUX_BG,fg=$BORDER_FG_NC

setw -g pane-border-status bottom # bottom, top

# {?pane_active,#[fg=$RED]$left_slant_separator,}\

setw -g pane-border-format "\
#{?pane_active,#[fg=$RED] ,}\
#{?#{==:#{window_panes},1},#[fg=$TMUX_FG]#{?pane_active,#[fg=$STATUSLINE_FG],} #{pane_index}.#{pane_id} ,\
#[fg=$TMUX_FG]#{?pane_active,#[fg=$BORDER_FG_ACTIVE],} #{pane_index}.#{pane_id}}\
#{?pane_active,#{pane_current_command} ,}"

# setw -g pane-border-format ""

#  +----------------------------------------------------------+
#  |                      STATUS THEMES                       |
#  +----------------------------------------------------------+
set -g status-fg $TMUX_FG
set -g status-bg $TMUX_BG
set -g status on
set -g status-interval 5
set -g status-position top
set -g status-justify left # left,centre, absolute-centre
set -g status-left ""

set -g message-style "bg=$STATUSLINE_BG_MESSAGE,fg=$TMUX_BG,bold"
set -g mode-style "bg=$STATUSLINE_BG_MESSAGE,fg=$TMUX_BG,bold"

#  ╓
#  ║  RIGHT
#  ╙
set -g status-right-length 80
set -g status-right "#{?#{e|<:#{window_width},130},\
#[fg=$GREEN]#{pomodoro_status}  #[fg=$RED] #(date +\"%A %d-%b-%y\") ,\
#[fg=$GREEN]#{pomodoro_status} \
#[fg=$RED]#{?@resize-locked,󰌾 Resize Pane,}#[default] \
#[fg=$STATUSLINE_FG]#[bold] #(date +\"%A, %d-%b-%y\")  #[fg=$RED] #(date +\"%H:%M\")  \
#[fg=$STATUSLINE_FG,bg=$TMUX_BG]#{?client_prefix,#[fg=$BORDER_FG_ACTIVE]#[bold]#{prefix},#{prefix}}\
#[fg=$STATUSLINE_FG,bg=$TMUX_BG]#[bold]  👨 #(whoami)  \
#[fg=$SESSION_BG]#[bg=$TMUX_BG]#[nobold]\
#[fg=$SESSION_FG]#[bg=$SESSION_BG,bold] ❐ #S }"

# +----------------------------------------------------------+
# |                      STATUS FORMAT                       |
# +----------------------------------------------------------+
# '' '' '' '' '' '' 

set-option -g window-status-current-format "\
#{?pane_in_mode,#{?#{==:#I,1},#[fg=$WHITE]#[bg=$WHITE],#[fg=$TMUX_BG]#[bg=$WHITE]}\
#[bg=$WHITE]#[fg=$TMUX_BG]#[bold],#{?#{==:#I,1},#[fg=$ACTIVE_BG]#[bg=$ACTIVE_BG],#[fg=$TMUX_BG]#[bg=$ACTIVE_BG]}\
#[fg=$ACTIVE_FG,bg=$ACTIVE_BG,bold]}#I:#{=30:#{b:pane_current_path}}#{?window_zoomed_flag,#[fg=$BORDER_FG_ACTIVE]#[bold] 󰁌,} \
#[fg=$ACTIVE_FG,bg=$ACTIVE_BG,noreverse,bold]#{?#{==:#{pane_mode},copy-mode},#[bg=$ACTIVE_BG]#[fg=$WHITE] \
#[fg=$ACTIVE_FG]COPYMODE #{?#{e|>:#{search_count},0},#[fg=$ACTIVE_BG]#[bg=$RED] #[fg=$ACTIVE_BG]Found #{search_count} #[bg=$WHITE]#[fg=$RED],#[fg=$ACTIVE_FG]#[bg=$WHITE]}\
#[bg=$WHITE]#[fg=$TMUX_FG] ℓ #{e|-|:#{history_size}, #{scroll_position}}/#{history_size} \
#[fg=$WHITE]#[bg=$TMUX_BG],#[fg=$ACTIVE_BG,bg=$TMUX_BG,nobold]}"

set-option -g window-status-format "\
#[fg=$TMUX_BG]#[bg=$TMUX_BG]\
#[fg=$STATUSLINE_FG,bg=$TMUX_BG,noreverse]#I:#{=30:#{b:pane_current_path}}#{?window_zoomed_flag,#[fg=$STATUSLINE_FG]#[bold] 󰁌,} \
#[fg=$ACTIVE_FG,bg=$ACTIVE_BG,noreverse,bold]#{?#{==:#{pane_mode},copy-mode},\
#[bg=$TMUX_BG]#[fg=$TMUX_BG] #[fg=$STATUSLINE_FG]COPY \
#{?#{e|>:#{search_count},0},#[bg=$TMUX_BG]#[fg=$TMUX_BG] #[fg=$STATUSLINE_FG]Found #{search_count} #[bg=$TMUX_BG]#[fg=$TMUX_BG],#[fg=$TMUX_BG]#[bg=$TMUX_BG]}\
#[bg=$TMUX_BG]#[fg=$STATUSLINE_FG] ℓ #{e|-|:#{history_size}, #{scroll_position}}/#{history_size} \
#[fg=$TMUX_BG]#[bg=$TMUX_BG],#[fg=$TMUX_BG,bg=$TMUX_BG,nobold]}"

