
@import "colors/colors.rasi"

* {
    background-color:       @background;
    text-color:             @border;
    font:                   "JetBrainsMono NF 18";
}

window {
    width:      		        650px;
    padding:    		        25px;
    border:					        1px;
    border-radius:          10px;
    transparency:           "screenshot";
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				        true;
    text-color:				      @border;
}
